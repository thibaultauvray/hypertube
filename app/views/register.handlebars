<div class="container-fluid userpage">
	<div class="jumbotron center-block">
		<form autocomplete="off">
			<h2 class="text-center"><i class="fa fa-sign-in" aria-hidden="true"></i> Register form</h2>
			<small class="text-center">Use the form below to create on account.</small>
			<small class="text-center"><strong>All fields are required.</strong></small>

			<span class="part">Social registration</span>
			<hr />

			<div class="row section">
				<div class="col-md-6 col-xs-12">
					<a href="/users/login/twitter" type="button" class="btn btn-info">
						<i class="fa fa-twitter" aria-hidden="true"></i>
						&nbsp;Register with Twitter
					</a>
				</div>
				<div class="col-md-6 col-xs-12">
					<a href="https://api.intra.42.fr/oauth/authorize?client_id=592306c98554ede4bbefe02ae74260c297c9c793583eef689a0420af1b21cece&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fusers%2Fregister%2F42&response_type=code&scope=public" type="button" class="btn btn-success">
						<i class="fa fa-chain" aria-hidden="true"></i>
						&nbsp;Register with 42 APi
					</a>
				</div>
			</div>

			<span class="part">Form registration</span>
			<hr />

			<div class="row section">
				<div class="col-md-6 col-xs-12">
					<div class="form-group username-field">
						<label for="username">Username</label>
						<input type="text" class="form-control" id="username" placeholder="Username" autocomplete="off" required />
					</div>
					<div class="form-group password-field">
						<label for="password">Password</label>
						<input type="password" class="form-control" id="password" placeholder="Password" autocomplete="off" required />
					</div>
					<div class="form-group mail-field">
						<label for="mail">Mail</label>
						<input type="mail" class="form-control" id="mail" placeholder="Mail" autocomplete="off" required />
					</div>
				</div>
				<div class="col-md-6 col-xs-12">
					<div class="form-group firstname-field">
						<label for="firstname">First name</label>
						<input type="text" class="form-control" id="firstname" placeholder="First name" autocomplete="off" required />
					</div>
					<div class="form-group lastname-field">
						<label for="lastname">Last name</label>
						<input type="text" class="form-control" id="lastname" placeholder="Last name" autocomplete="off" required />
					</div>
					<div class="form-group avatar-field">
						<label for="avatar">Avatar</label>
						<input type="file" class="form-control" id="avatar" />
					</div>
				</div>
			</div>

			<button id="register-btn" type="button" class="btn btn-primary" disabled><i class="fa fa-sign-in" aria-hidden="true"></i> Register</button>
			<p class="page-change text-center text-muted">Already have an account ? <a href="/users/login">Login</a>.</p>
		</form>
	</div>
</div>

<script type="text/javascript" src="/js/mylib.js"></script>
<script type="text/javascript" src="/js/register.js"></script>
