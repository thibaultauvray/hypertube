<div class="container-fluid userpage">
	<div class="jumbotron center-block">
		<form autocomplete="off" data-username="{{ username }}" data-token="{{ token }}">
			<h2 class="text-center"><i class="fa fa-lock" aria-hidden="true"></i> Reset password ?</h2>
			<small class="text-center">Enter your new password in the field below.</small>
			<small class="text-center"><strong>All fields are required.</strong></small>

			<span class="part">Reset password</span>
			<hr />

			<div class="row section">
				<div class="col-md-6 col-xs-12">
					<div class="form-group password-field">
						<label for="password">Password</label>
						<input type="password" class="form-control" id="password" placeholder="New password" autocomplete="off" required />
					</div>
				</div>
				<div class="col-md-6 col-xs-12">
					<button id="reset-btn" type="button" class="btn btn-primary" disabled><i class="fa fa-lock" aria-hidden="true"></i> Set new password</button>
				</div>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript" src="/js/mylib.js"></script>
<script type="text/javascript" src="/js/reset-password.js"></script>
