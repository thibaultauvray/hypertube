<div class="container-fluid userpage">
	<div class="jumbotron center-block">
		<form autocomplete="off">
			<h2 class="text-center"><i class="fa fa-sign-in" aria-hidden="true"></i> Sign in</h2>
			<small class="text-center">Please provide your account details to access Hypertube application.</small>
			<small class="text-center"><strong>All fields are required.</strong></small>

			<span class="part">Social sign-in</span>
			<hr />

			<div class="row section">
				<div class="col-md-6 col-xs-12">
					<a href="/users/login/twitter" type="button" class="btn btn-info">
						<i class="fa fa-twitter" aria-hidden="true"></i>
						&nbsp;Login with Twitter
					</a>
				</div>
				<div class="col-md-6 col-xs-12">
					<a href="https://api.intra.42.fr/oauth/authorize?client_id=592306c98554ede4bbefe02ae74260c297c9c793583eef689a0420af1b21cece&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fusers%2Fregister%2F42&response_type=code&scope=public" type="button" class="btn btn-success">
						<i class="fa fa-chain" aria-hidden="true"></i>
						&nbsp;Login with 42 APi
					</a>
				</div>
			</div>

			<span class="part">Classic sign-in</span>
			<hr />

			<div class="row section">
				<div class="col-md-6 col-xs-12">
					<div class="form-group login-field">
						<label for="login">Username</label>
						<input type="text" class="form-control" id="login" placeholder="Username" autocomplete="off" required />
					</div>
				</div>
				<div class="col-md-6 col-xs-12">
					<div class="form-group pwd-field">
						<label for="pwd">Password</label>
						<input type="password" class="form-control" id="pwd" placeholder="Password" autocomplete="off" required />
						<span id="forgot"><a href="/users/forgot-password">Forgot password ?</a></span>
					</div>
				</div>
			</div>

			<button id="login-btn" type="button" class="btn btn-primary" disabled><i class="fa fa-sign-in" aria-hidden="true"></i> Sign-in</button>
			<p class="page-change text-center text-muted">Don't have an account ? <a href="/users/register">Register</a>.</p>
		</form>
	</div>
</div>

<script type="text/javascript" src="/js/mylib.js"></script>
<script type="text/javascript" src="/js/login.js"></script>
